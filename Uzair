newline proc  
    push dx
    push ax
    mov dx, 10  
    mov ah, 2
    int 21h
    mov dx, 13  
    mov ah, 2
    int 21h
    pop ax
    pop dx
    ret
newline endp 
InputNo proc
    inputn:
          mov ah, 0
          int 16h
          mov dx, 0
          mov bx, 1
          cmp al, 0dh
          je FormNo
          sub al, 30h
          call viewNo
          mov ah, 0
          push ax
          inc cx
          jmp inputn
InputNo endp 

FormNo proc
    formN:  
    pop ax
    push dx
    mul bx
    pop dx
    add dx, ax
    mov ax, bx
    mov bx, 10
    push dx
    mul bx
    pop dx
    mov bx, ax
    dec cx
    cmp cx, 0
    jne formN
    ret
FormNo endp 

view proc 
    Vie:
    mov ax, dx
    mov dx, 0 
    div cx
    call viewNo
    mov bx, dx
    mov dx, 0
    mov ax, cx
    mov cx, 10
    div cx
    mov dx, bx
    mov cx, ax
    cmp ax, 0
    jne Vie
    ret 
view endp

viewNo proc
    push ax
    push dx
    mov dx, ax
    add dl, 30h
    mov ah, 2
    int 21h
    pop dx
    pop ax
    ret
viewNo endp

addition proc  
    mov ax, @data
    mov ds, ax 
    call newline
    call newline 
    mov ah, 09h
    mov dx, offset msg15   
    int 21h      
    call newline
    call newline 
    EnterFirstNumber msg6
    mov cx, 0
    call InputNo
    push dx
    mov ah, 9    
    call newline  
    call newline
    EnterSecondNumber msg7 
    mov cx, 0
    call InputNo
    pop bx
    add dx, bx
    push dx 
    mov ah, 9 
    call newline
    call newline 
    mov dx, offset msg8
    int 21h
    mov cx, 10000
    pop dx
    call view 
    call newline  
    mov dx, offset msg14 
    mov ah, 9  
    int 21h
    call newline    
    mov dx, offset msg9
    mov ah, 9    
    int 21h
        
    mov ah, 1
    int 21h
    sub al, 48

    cmp al, 1
    je call start 
    
    
    cmp al, 2
    je call exit
    
    int 21h
    ;jmp exit
    ret
addition endp  

Subtraction proc 
    mov ax, @data
    mov ds, ax 
    call newline
    call newline 
    mov ah, 09h
    mov dx, offset msg16   
    int 21h      
    call newline
    call newline 
    EnterFirstNumber msg6
    mov cx, 0
    call InputNo
    push dx
    mov ah, 9    
    call newline 
    call newline
    EnterSecondNumber msg7  
    mov cx, 0
    call InputNo
    pop bx
    sub bx, dx
    mov dx, bx
    push dx 
    mov ah, 9 
    call newline
    call newline 
    mov dx, offset msg8
    int 21h
    mov cx, 10000
    pop dx
    call view
     call newline  
    mov dx, offset msg14 
    mov ah, 9  
    int 21h
    call newline    
    mov dx, offset msg9
    mov ah, 9    
    int 21h
        
    mov ah, 1
    int 21h
    sub al, 48

    cmp al, 1
    je call start 
    
    
    cmp al, 2
    je call exit
     
    int 21h   
    ret
Subtraction endp
